							"                        \"directors\": {\"type\": \"array\", \"items\": {\"type\": \"string\"}},",
							"                        \"writers\": {\"type\": \"array\", \"items\": {\"type\": \"string\"}},",
							"                     }",
							"            }",
							"        }",
							"    }",
							"};",
							"",
							"pm.test('Проверка схемы', function () {",
							"    pm.expect(ajv.validate(schema, pm.response.json()), JSON.stringify(ajv.errors)).to.be.true;",
							"});"
